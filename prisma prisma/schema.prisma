model User {
  id           String        @id @default(cuid())
  email        String        @unique
  passwordHash String?
  name         String?
  birthdate    DateTime?
  gender       String?
  image        String?       @db.VarChar(255) // <--- Tambahkan ini
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  profile      Profile?
  reputation   Reputation?
  moodSessions MoodSession[]
}

model Hidden {
  id     String @id @default(cuid())
  userId String
  hideId String
  @@unique([userId, hideId])
}